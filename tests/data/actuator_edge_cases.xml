<mujoco model="actuator_edge_cases">
  <worldbody>
    <body name="base" pos="0 0 1">
      <geom name="base_geom" type="plane" size="0 0 0.05" rgba="0.5 0.5 0.5 1"/>

      <!-- Body with unnamed actuator -->
      <body name="box1" pos="0 0 0.2">
        <geom name="box1_geom" type="box" size="0.1 0.1 0.1" rgba="0.8 0.2 0.2 1"/>
        <joint name="box1_joint" type="slide" axis="0 0 1"/>
      </body>

      <!-- Bodies with duplicate actuator names -->
      <body name="box2" pos="0.3 0 0.2">
        <geom name="box2_geom" type="box" size="0.1 0.1 0.1" rgba="0.2 0.8 0.2 1"/>
        <joint name="box2_joint" type="slide" axis="0 0 1"/>
      </body>

      <body name="box3" pos="0.6 0 0.2">
        <geom name="box3_geom" type="box" size="0.1 0.1 0.1" rgba="0.2 0.2 0.8 1"/>
        <joint name="box3_joint" type="slide" axis="0 0 1"/>
        <site name="valid_site" pos="0 0 0"/>
      </body>
    </body>
  </worldbody>

    <actuator>
    <!-- Unnamed actuator - will use default naming -->
    <motor joint="box1_joint"/>

    <!-- Duplicate names to test name conflict resolution -->
    <motor name="duplicate_name" joint="box2_joint"/>
    <motor name="duplicate_name" joint="box3_joint"/>

    <!-- Actuators with missing targets to trigger warnings -->
    <general name="missing_target" body="nonexistent_body" gear="1 0 0 0 0 0"/>
    <general name="missing_refsite" site="valid_site" refsite="nonexistent_site" gear="1 0 0 0 0 0"/>
    <general name="missing_slidersite" cranksite="valid_site" slidersite="nonexistent_site" gear="1 0 0 0 0 0"/>

    <!-- Test all dyntype enum values -->
    <general name="none_dyn" joint="box1_joint" dyntype="none" gear="1 0 0 0 0 0"/>
    <general name="integrator_dyn" joint="box1_joint" dyntype="integrator" gear="1 0 0 0 0 0"/>
    <general name="filter_dyn" joint="box1_joint" dyntype="filter" gear="1 0 0 0 0 0"/>
    <general name="filterexact_dyn" joint="box1_joint" dyntype="filterexact" gear="1 0 0 0 0 0"/>
    <general name="muscle_dyn" joint="box2_joint" dyntype="muscle" gear="1 0 0 0 0 0"/>
    <general name="user_dyn" joint="box3_joint" dyntype="user" gear="1 0 0 0 0 0"/>

    <!-- Test all gaintype enum values -->
    <general name="fixed_gain" joint="box1_joint" gaintype="fixed" gear="1 0 0 0 0 0"/>
    <general name="affine_gain" joint="box1_joint" gaintype="affine" gear="1 0 0 0 0 0"/>
    <general name="muscle_gain" joint="box1_joint" gaintype="muscle" gear="1 0 0 0 0 0"/>
    <general name="user_gain" joint="box2_joint" gaintype="user" gear="1 0 0 0 0 0"/>

    <!-- Test all biastype enum values -->
    <general name="none_bias" joint="box1_joint" biastype="none" gear="1 0 0 0 0 0"/>
    <general name="affine_bias" joint="box1_joint" biastype="affine" gear="1 0 0 0 0 0"/>
    <general name="muscle_bias" joint="box1_joint" biastype="muscle" gear="1 0 0 0 0 0"/>
    <general name="user_bias" joint="box2_joint" biastype="user" gear="1 0 0 0 0 0"/>
  </actuator>
</mujoco>