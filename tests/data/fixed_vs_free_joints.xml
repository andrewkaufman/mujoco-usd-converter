<mujoco model="fixed_vs_free_joints">
    <worldbody>
        <!-- Scenario 1: Fixed Joint -->
        <!-- body2 is welded to body1 because there's no explicit joint element -->
        <body name="body1" pos="0 0 1">
            <geom type="box" size="0.1 0.1 0.1"/>
            <body name="body2" pos="0 0.5 0" euler="0 0 90">
                <geom type="box" size="0.1 0.1 0.1"/>
            </body>
        </body>

        <!-- Scenario 2: Free Joint -->
        <!-- body4 has a free joint, so no UsdPhysics.Joint should be authored -->
        <body name="body3" pos="1 0 1">
            <freejoint name="freejoint"/>
            <geom type="box" size="0.1 0.1 0.1"/>
            <body name="body4" pos="0 0.5 0">
                <geom type="box" size="0.1 0.1 0.1"/>
            </body>
        </body>
    </worldbody>
</mujoco>
